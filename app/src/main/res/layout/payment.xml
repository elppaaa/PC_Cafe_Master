<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/paymenttitle"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="자주쓰는카드"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Spinner
            android:spinnerMode="dropdown"
            android:id="@+id/spinnerCard"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="카드번호"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCardNum"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="유효기간"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCardDueM"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="월"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCardDueY"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="년"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="비밀번호"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtCardDuePw"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="**"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="카드종류"
            android:textSize="15sp"
            android:textStyle="bold" />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="일반"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:text="법인"/>
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:text="인증번호"
            android:textSize="15sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="주민번호앞6자리"/>

    </LinearLayout>

    <TextView
        android:id="@+id/edtCardCost"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="230dp"
        android:layout_gravity="center"
        android:text="결제 금액 : "
        android:textSize="28sp"
        android:maxLines="1"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:background="#FFAEB9"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/paymentbtn"
        android:background="#ececec"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"/>
</LinearLayout>