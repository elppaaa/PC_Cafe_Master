<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ecececec"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/menuordertitle"/>
    <ListView
        android:id="@+id/listview1"
        android:layout_width="match_parent"
        android:layout_weight="8"
        android:layout_height="0dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="장바구니"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="7">

            <TextView
                android:id="@+id/menuorder_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:maxLines="3" />

            <TextView
                android:id="@+id/menuorder_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

        </LinearLayout>


        <Button
            android:id="@+id/menuorder_reset"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="0dp"
            android:text="초기화" />

        <Button
            android:id="@+id/menuorder_pay"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="0dp"
            android:text="결제" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/btnTomain"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="#ececec"
        android:scaleType="fitCenter"
        android:src="@drawable/tomain"/>



</LinearLayout>